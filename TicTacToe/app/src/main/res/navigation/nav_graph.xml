<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/mainFragment">
    <fragment android:id="@+id/mainFragment" android:name="no.jahnsrud.tictactoe.MainFragment"
              android:label="fragment_main" tools:layout="@layout/fragment_main">
        <action android:id="@+id/action_mainFragment_to_startFragment"
                app:destination="@+id/startFragment"
                app:enterAnim="@anim/slide_in_right"
                app:popEnterAnim="@anim/slide_in_right"/>
        <action android:id="@+id/action_mainFragment_to_leaderboardFragment" app:destination="@id/leaderboardFragment"
                app:enterAnim="@anim/fade_in" app:popEnterAnim="@anim/fade_in"/>
    </fragment>
    <fragment android:id="@+id/gameFragment"
              android:name="no.jahnsrud.tictactoe.GameFragment"
              android:label="fragment_game"
              tools:layout="@layout/fragment_game"/>

    <fragment android:id="@+id/startFragment" android:name="no.jahnsrud.tictactoe.StartFragment"
              android:label="fragment_start" tools:layout="@layout/fragment_start">
        <action android:id="@+id/action_startFragment_to_gameFragment" app:destination="@id/gameFragment"
                app:enterAnim="@anim/fade_in" app:popEnterAnim="@anim/fade_in"/>
    </fragment>
    <fragment android:id="@+id/leaderboardFragment" android:name="no.jahnsrud.tictactoe.LeaderboardFragment"
              android:label="fragment_leaderboard" tools:layout="@layout/fragment_leaderboard"/>
</navigation>