<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="140dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="715dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <TextView
                android:text="PLAYER_NAME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/playerNameField"/>
        <TextView
                android:text="PLAYER_SCORE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/playerScoreField"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>