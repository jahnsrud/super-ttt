<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".GameFragment">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/lightGrayBackground">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="119dp" android:background="@color/lightGrayBackground" android:gravity="center">
            <TextView
                    android:text="CURRENT_PLAYER"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/currentPlayerTextField"
                    android:textAlignment="center" android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" android:textSize="22sp"/>
            <Chronometer
                    android:id="@+id/timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center" android:padding="26dp"
                android:background="@android:color/background_light">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center">
                <Button
                        android:text="/"
                        android:layout_width="90dp"
                        android:layout_height="90dp" android:id="@+id/button1" android:tag="1"
                        style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                        android:textStyle="bold" android:textColor="@color/colorPrimaryDark"/>
                <Button
                        android:text="/"
                        android:layout_width="90dp"
                        android:layout_height="90dp" android:id="@+id/button2" android:tag="2"
                        style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                        android:textStyle="bold" android:textColor="@color/colorPrimaryDark"/>
                <Button
                        android:text="/"
                        android:layout_width="90dp"
                        android:layout_height="90dp" android:id="@+id/button3" android:tag="3"
                        style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                        android:textStyle="bold" android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center">
                <Button
                        android:text="/"
                        android:layout_width="90dp"
                        android:layout_height="90dp" android:id="@+id/button4" android:tag="4"
                        style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                        android:textStyle="bold" android:textColor="@color/colorPrimaryDark"/>
                <Button
                        android:text="/"
                        android:layout_width="90dp"
                        android:layout_height="90dp" android:id="@+id/button5" android:tag="5"
                        style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                        android:textStyle="bold" android:textColor="@color/colorPrimaryDark"/>
                <Button
                        android:text="/"
                        android:layout_width="90dp"
                        android:layout_height="90dp" android:id="@+id/button6" android:tag="6"
                        style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                        android:textStyle="bold" android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center">
                <Button
                        android:text="/"
                        android:layout_width="90dp"
                        android:layout_height="90dp" android:id="@+id/button7" android:tag="7"
                        style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                        android:textStyle="bold" android:textColor="@color/colorPrimaryDark"/>
                <Button
                        android:text="/"
                        android:layout_width="90dp"
                        android:layout_height="90dp" android:id="@+id/button8" android:tag="8"
                        style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                        android:textStyle="bold" android:textColor="@color/colorPrimaryDark"/>
                <Button
                        android:text="/"
                        android:layout_width="90dp"
                        android:layout_height="90dp" android:id="@+id/button9" android:tag="9"
                        style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                        android:textStyle="bold" android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:gravity="center">
            <Button
                    android:text="Restart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/resetButton"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>