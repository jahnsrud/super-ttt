<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".GameFragment">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/lightGrayBackground">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="130dp" android:background="@color/lightGrayBackground" android:gravity="center">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:layout_gravity="center|center_vertical" android:gravity="center"
                    android:layout_marginTop="24dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:paddingRight="8dp">
                    <ImageView
                            android:src="@drawable/mario_selected"
                            android:layout_width="56dp"
                            android:layout_height="56dp" android:id="@+id/player1Image"
                            android:layout_marginBottom="4dp"/>
                    <TextView
                            android:text="PLAYER"
                            android:layout_width="match_parent"
                            android:layout_height="24dp" android:id="@+id/player1Name" android:textSize="9sp"
                            android:textAlignment="center" android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:paddingLeft="8dp">
                    <ImageView
                            android:src="@drawable/luigi_unselected"
                            android:layout_width="56dp"
                            android:layout_height="56dp" android:id="@+id/player2Image"
                            android:layout_marginBottom="4dp"/>
                    <TextView
                            android:text="PLAYER"
                            android:layout_width="match_parent"
                            android:layout_height="24dp" android:id="@+id/player2Name" android:textSize="9sp"
                            android:textAlignment="center" android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:gravity="center" android:layout_gravity="center"
                android:padding="2dp" android:layout_marginTop="16dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:layout_gravity="center"
                    android:layout_margin="10dp">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:gravity="center"
                        android:background="@color/colorPrimary">
                    <ImageButton
                            android:layout_width="90dp"
                            android:layout_height="90dp" android:id="@+id/button1" android:tag="1"
                            style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                            android:textStyle="bold" android:textColor="@color/colorPrimaryDark"
                            android:scaleType="centerInside" android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp" android:background="@color/lightGrayBackground"/>
                    <ImageButton
                            android:layout_width="90dp"
                            android:layout_height="90dp" android:id="@+id/button2" android:tag="2"
                            style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                            android:textStyle="bold" android:textColor="@color/colorPrimaryDark"
                            android:scaleType="centerInside" android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp" android:background="@color/lightGrayBackground"/>
                    <ImageButton
                            android:layout_width="90dp"
                            android:layout_height="90dp" android:id="@+id/button3" android:tag="3"
                            style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                            android:textStyle="bold" android:textColor="@color/colorPrimaryDark"
                            android:scaleType="centerInside" android:layout_marginBottom="2dp"
                            android:background="@color/lightGrayBackground"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:gravity="center"
                        android:background="@color/colorPrimary">
                    <ImageButton
                            android:layout_width="90dp"
                            android:layout_height="90dp" android:id="@+id/button4" android:tag="4"
                            style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                            android:textStyle="bold" android:textColor="@color/colorPrimaryDark"
                            android:scaleType="centerInside" android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp" android:background="@color/lightGrayBackground"/>
                    <ImageButton
                            android:layout_width="90dp"
                            android:layout_height="90dp" android:id="@+id/button5" android:tag="5"
                            style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                            android:textStyle="bold" android:textColor="@color/colorPrimaryDark"
                            android:scaleType="centerInside" android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp" android:background="@color/lightGrayBackground"/>
                    <ImageButton
                            android:layout_width="90dp"
                            android:layout_height="90dp" android:id="@+id/button6" android:tag="6"
                            style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                            android:textStyle="bold" android:textColor="@color/colorPrimaryDark"
                            android:scaleType="centerInside" android:layout_marginBottom="2dp"
                            android:background="@color/lightGrayBackground"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:gravity="center"
                        android:background="@color/colorPrimary">
                    <ImageButton
                            android:layout_width="90dp"
                            android:layout_height="90dp" android:id="@+id/button7" android:tag="7"
                            style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                            android:textStyle="bold" android:textColor="@color/colorPrimaryDark"
                            android:scaleType="centerInside" android:layout_marginRight="2dp"
                            android:background="@color/lightGrayBackground"/>
                    <ImageButton
                            android:layout_width="90dp"
                            android:layout_height="90dp" android:id="@+id/button8" android:tag="8"
                            style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                            android:textStyle="bold" android:textColor="@color/colorPrimaryDark"
                            android:scaleType="centerInside" android:layout_marginRight="2dp"
                            android:background="@color/lightGrayBackground"/>
                    <ImageButton
                            android:layout_width="90dp"
                            android:layout_height="90dp" android:id="@+id/button9" android:tag="9"
                            style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                            android:textStyle="bold" android:textColor="@color/colorPrimaryDark"
                            android:scaleType="centerInside" android:background="@color/lightGrayBackground"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom|center_horizontal" android:layout_marginBottom="16dp"
                        android:layout_marginTop="32dp" android:layout_weight="1">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:gravity="center|center_vertical"
                            android:background="@drawable/rounded_background"
                            android:layout_gravity="bottom" android:id="@+id/gameControllers">
                        <Chronometer
                                android:id="@+id/timer"
                                android:layout_width="100dp"
                                android:layout_height="36dp"
                                android:textAlignment="textStart" android:textStyle="bold"
                                android:textSize="18sp" android:background="@android:color/white"
                                android:gravity="center"
                                android:textColor="@color/colorPrimary" android:layout_gravity="center"
                                android:layout_weight="1" android:layout_marginLeft="32dp"/>
                        <ImageButton
                                android:layout_width="60dp"
                                android:layout_height="60dp" android:id="@+id/pauseButton"
                                style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                                android:src="@drawable/icon_pause" android:scaleType="centerInside"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:gravity="center|center_vertical"
                            android:background="@drawable/rounded_background"
                            android:id="@+id/gameOverView" android:layout_gravity="bottom">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_weight="1"
                                android:gravity="center|center_horizontal|center_vertical">
                            <TextView
                                    android:text="STATUS"
                                    android:layout_width="match_parent"
                                    android:id="@+id/gameOverStatusText"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/darker_gray" android:layout_marginLeft="16dp"
                                    android:gravity="center_vertical"
                                    android:layout_height="wrap_content" android:letterSpacing="0.1"/>
                            <TextView
                                    android:text="NAME"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/gameOverText"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black" android:layout_marginLeft="16dp"
                                    android:gravity="center_vertical"/>
                        </LinearLayout>
                        <ImageButton
                                android:layout_width="55dp"
                                android:layout_height="55dp" android:id="@+id/restartButton"
                                style="@style/Widget.AppCompat.Button.Borderless" android:textSize="30sp"
                                android:src="@drawable/icon_restart" android:scaleType="centerInside"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>