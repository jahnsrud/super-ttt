<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MainFragment">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/lightGrayBackground">
        <TextView
                android:text="super tic tac"
                android:layout_width="match_parent"
                android:layout_height="104dp" android:id="@+id/textView" android:textStyle="bold"
                android:textSize="32sp" android:textAlignment="center" android:textColor="@android:color/black"
                android:gravity="center" android:fontFamily="@font/super_mario_font" android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@color/onePlayerBackground"
                    android:layout_marginBottom="8dp" android:gravity="center" android:id="@+id/player1Box"
                    android:paddingBottom="16dp" android:paddingTop="16dp">
                <ImageView
                        android:src="@drawable/player_mario"
                        android:layout_width="56dp"
                        android:layout_height="75dp" android:id="@+id/imageView"
                        android:background="@drawable/player_mario" android:scaleType="centerInside"/>
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="13dp"/>
                <TextView
                        android:text="1 PLAYER"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView3"
                        android:textAlignment="center" android:textStyle="bold"
                        android:textColor="@android:color/white"/>
                <TextView
                        android:text="CPU"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView4" android:textSize="32sp"
                        android:textAlignment="center" android:textStyle="bold"
                        android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@drawable/rounded_background"
                    android:layout_marginBottom="8dp" android:gravity="center" android:id="@+id/player2Box"
                    android:paddingBottom="16dp" android:paddingTop="16dp">
                <ImageView
                        android:src="@drawable/player_mario"
                        android:layout_width="56dp"
                        android:layout_height="75dp" android:id="@+id/imageView"
                        android:background="@drawable/player_luigi" android:scaleType="centerInside"/>
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="13dp"/>
                <TextView
                        android:text="2 PLAYER"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView3"
                        android:textAlignment="center" android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>
                <TextView
                        android:text="Battle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView4" android:textSize="32sp"
                        android:textAlignment="center" android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <Button
                    android:text="Leaderboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/leaderboardButton"
                    style="@style/Widget.AppCompat.Button"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>